<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 1. AJUSTE NA LIST VIEW -->
        <record id="whatsapp_message_view_tree" model="ir.ui.view">
            <field name="name">whatsapp.message.tree</field>
            <field name="model">whatsapp.message</field>
            <field name="arch" type="xml">
                <list string="WhatsApp Messages" sample="1">
                    <!-- Colunas Visíveis -->
                    <field name="timestamp"/>
                    <field name="instance_id"/>
                    <field name="message_direction"/>
                    <field name="partner_id" string="Contato"/>
                    <field name="is_group" string="G."/>
                    <field name="body" string="Conteúdo / Mídia" widget="whatsapp_list_media_widget"/>
                    <field name="state" widget="badge" decoration-success="state == 'read'"
                           decoration-info="state == 'delivered'"
                           decoration-muted="state == 'sent'"
                           decoration-danger="state == 'failed'"/>

                    <!-- Campos necessários para o widget, mas agora INVISÍVEIS na lista -->
                    <field name="media_type" invisible="1"/>
                    <field name="media_url" invisible="1"/>
                    <field name="media_filename" invisible="1"/>
                </list>
            </field>
        </record>
        
        <!-- 2. AJUSTE NA FORM VIEW -->
        <record id="whatsapp_message_view_form" model="ir.ui.view">
            <field name="name">whatsapp.message.form</field>
            <field name="model">whatsapp.message</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Message" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="instance_id"/>
                                <field name="partner_id"/>
                                <field name="message_id"/>
                                <field name="timestamp"/>
                            </group>
                            <group>
                                <field name="phone_number" string="Número Original"/>
                                <field name="state" widget="badge"/>
                                <field name="sender_name" invisible="1"/>
                            </group>
                        </group>
                        <!-- Grupo "Detalhes da Mídia" com o campo redundante REMOVIDO -->
                        <group string="Detalhes da Mídia" invisible="not media_url">
                            <field name="media_type"/>
                            <field name="media_filename"/>
                            <!-- A linha <field name="media_url" widget="url"/> foi removida daqui -->
                        </group>
                        <notebook>
                            <page string="Message">
                                <group>
                                    <field name="reacted_message_id" invisible="not reacted_message_id"/>
                                    <field name="body" nolabel="1" class="mb-3" placeholder="Mensagem de texto ou legenda da mídia..."/>
                                    <!-- O widget de preview já contém os botões e o player -->
                                    <field name="media_preview" widget="html" nolabel="1" invisible="not media_url"/>
                                </group>
                            </page>
                            <page string="Raw Data">
                                <group>
                                    <field name="raw_json" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search View (Sem alterações) -->
        <record id="whatsapp_message_view_search" model="ir.ui.view">
            <field name="name">whatsapp.message.search</field>
            <field name="model">whatsapp.message</field>
            <field name="arch" type="xml">
                <search string="Search WhatsApp Messages">
                    <field name="body"/>
                    <field name="partner_id"/>
                    <field name="instance_id"/>
                </search>
            </field>
        </record>

        <!-- Action (Sem alterações) -->
        <record id="whatsapp_message_action" model="ir.actions.act_window">
            <field name="name">WhatsApp Messages</field>
            <field name="res_model">whatsapp.message</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="whatsapp_message_view_search"/>
        </record>
    </data>
</odoo>