<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="evolution_config_settings_view_form" model="ir.ui.view">
        <field name="name">evolution.api.config.form</field>
        <field name="model">evolution.api.config</field>
        <field name="arch" type="xml">
            <!-- CORREÇÃO: O atributo edit="false" foi removido para permitir a edição dos campos. -->
            <!-- Os atributos create="false" e delete="false" permanecem para proteger o registro único. -->
            <form string="Evolution API Configuration" create="false" delete="false">
                <header>
                    <button name="action_save" string="Salvar" type="object" class="btn-primary" data-hotkey="s"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="j"/>
                </header>
                <sheet>
                    <!-- O campo 'name' foi adicionado para ser invisível, apenas para que o título funcione corretamente -->
                    <field name="name" invisible="1"/>
                    <h1>Evolution API Configuration</h1>
                    <group>
                        <group>
                            <field name="evolution_api_url" placeholder="https://seu-servidor-evolution.com"/>
                        </group>
                        <group>
                            <field name="evolution_api_global_key" password="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- A ação permanece a mesma, pois já está correta -->
    <record id="action_whatsapp_config_settings" model="ir.actions.act_window">
        <field name="name">Configurações da API Evolution</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">evolution.api.config</field>
        <field name="view_mode">form</field>
        <field name="target">main</field>
        <field name="res_id" ref="whatsapp_evolution_base.evolution_api_config_singleton_record"/>
        <field name="view_id" ref="evolution_config_settings_view_form"/>
        <field name="context">{'headless': True, 'edit': True}</field>
    </record>

</odoo>