<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_rule_private_contacts" model="ir.rule">
            <field name="name">Contatos: Apenas públicos ou meus</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('is_private', '=', False), ('owner_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Regra de registro para whatsapp.instance: Usuários só veem instâncias da empresa ou as que eles possuem -->
        <record id="whatsapp_instance_rule_private_instances" model="ir.rule">
            <field name="name">Instâncias WhatsApp: Apenas da empresa ou minhas</field>
            <field name="model_id" ref="whatsapp_evolution_base.model_whatsapp_instance"/>
            <field name="domain_force">['|', ('instance_type', '=', 'company'), ('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>