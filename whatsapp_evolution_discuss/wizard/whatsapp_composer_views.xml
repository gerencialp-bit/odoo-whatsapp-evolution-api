<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_evolution_composer_view_form" model="ir.ui.view">
        <field name="name">whatsapp.evolution.composer.form</field>
        <field name="model">whatsapp.evolution.composer</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp Message">
                <group>
                    <field name="instance_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="body"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                    <field name="model" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Send" name="action_send_message" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_whatsapp_evolution_composer" model="ir.actions.act_window">
        <field name="name">Send WhatsApp Message</field>
        <field name="res_model">whatsapp.evolution.composer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>