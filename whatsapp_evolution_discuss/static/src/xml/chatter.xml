<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- CORREÇÃO: O template pai no Odoo 18 é "mail.Chatter.topbar" -->
    <t t-name="whatsapp_evolution_discuss.Chatter.Buttons" t-inherit="mail.Chatter.topbar" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o-mail-Chatter-buttonLogNote')]" position="before">
            <!-- Removido mb-1 mb-lg-0 para melhor alinhamento e simplificado o nome da classe -->
            <button class="btn btn-secondary o_Chatter_button_whatsapp me-2"
                    title="Send WhatsApp Message"
                    t-on-click.prevent="_onClickSendWhatsapp">
                <i class="fa fa-whatsapp me-1"/> WhatsApp
            </button>
        </xpath>
    </t>

</templates>